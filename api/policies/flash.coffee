# flash.js policy

module.exports = (req, res, next) ->
  res.locals.messages =
    notify: []
    error: []
    warning: []
  if !req.session.messages
    req.session.messages =
      notify: []
      error: []
      warning: []
    return next()
  res.locals.messages = _.clone(req.session.messages)
  # Clear flash
  req.session.messages =
    notify: []
    error: []
    warning: []
  next()

